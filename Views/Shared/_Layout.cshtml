@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager
@{
    var user = UserManager.GetUserAsync(User).Result;
}

<!DOCTYPE html>
<html lang="pl">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BOK</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="~/css/custom.css">
    <link rel="stylesheet" type="text/css"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css"
          href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css">
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body id="body-pd">
    <script src="~/js/site.js"></script>
    <script type="text/javascript"
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"></script>
    <div class="nav_mobile">
        <a href="javascript:void(0);" class="nav_mobile-icon" onclick="navMobile()">
            <i class="fa fa-bars"></i>
        </a>
        <div id="nav_mobile-links">
            <span class="nav_mobile_logo-name nav_logo">BOK</span>
            <a href="#" class="nav_link active">
                <i class='bx bx-grid-alt nav_icon'></i>
                <span class="nav_name">Strona główna</span>
            </a>

            <a href="#" class="nav_link">
                <i class='bx bx-user nav_icon'></i> <span class="nav_name">Użytkownicy</span>
            </a>

            <a href="#" class="nav_link">
                <i class='bx bx-bar-chart-alt-2 nav_icon'></i> <span class="nav_name">Raporty</span>
            </a>

            <a href="#" class="nav_link">
                <i class='bx bx-money-withdraw nav_icon'></i> <span class="nav_name">Oferta</span>
            </a>
            <div class="dropdown">
                <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle"
                   id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false" onclick="sidebar()">
                    <img src="/img/user-icon.jpg" class="rounded-circle me-2"><span class="nav_name">TestName</span>
                </a>
                <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdownUser1">
                    <li><a class="dropdown-item" href="#">New project</a></li>
                    <li>
                        <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index"
                           title="Manage">Settings</a>
                    </li>
                    <li><a class="dropdown-item" href="#">Profile</a></li>
                    <li>
                        <hr class="dropdown-divider">
                    </li>
                    <li>
                        <form class="form-inline" asp-controller="Account" asp-action="Logout" method="post">
                            <button type="submit" class="dropdown-item">Logout</button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <header class="header" id="header">
        <a href="javascript:void(0);" class="nav_mobile-icon" onclick="navMobile()">
            <i class="fa fa-bars"></i>
        </a>
        <h2 id="header_name">Header text</h2>
    </header>
    <div class="l-navbar" id="nav-bar">
        <nav class="nav">
            <div>
                <span class="nav_logo-name">BOK</span>
                <div class="nav_list">

                    <a href="#" class="nav_link active">
                        <i class='bx bx-grid-alt nav_icon'></i>
                        <span class="nav_name">Strona główna</span>
                    </a>

                    <a href="#" class="nav_link">
                        <i class='bx bx-user nav_icon'></i> <span class="nav_name">Użytkownicy</span>
                    </a>

                    <a href="#" class="nav_link">
                        <i class='bx bx-bar-chart-alt-2 nav_icon'></i> <span class="nav_name">Raporty</span>
                    </a>

                    <a href="#" class="nav_link">
                        <i class='bx bx-money-withdraw nav_icon'></i> <span class="nav_name">Oferta</span>
                    </a>
                </div>
            </div>
            <div class="dropdown">
                <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle"
                   id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false" onclick="sidebar()">
                    <img src="/img/user-icon.jpg" class="rounded-circle me-2"><span class="nav_name">TestName</span>
                </a>
                <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdownUser1">
                    <li><a class="dropdown-item" href="#">New project</a></li>
                    <li>
                        <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index"
                           title="Manage">Settings</a>
                    </li>
                    <li><a class="dropdown-item" href="#">Profile</a></li>
                    <li>
                        <hr class="dropdown-divider">
                    </li>
                    <li>
                        <form class="form-inline" asp-controller="Account" asp-action="Logout" method="post">
                            <button type="submit" class="dropdown-item">Logout</button>
                        </form>
                    </li>
                </ul>
            </div>
        </nav>
    </div>
    <div class="container">
        <h4>Container text</h4>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>